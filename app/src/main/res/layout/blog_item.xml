<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:paddingBottom="20dp">
    <RelativeLayout
        android:id="@+id/info_blog_holder"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/background"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/img_holder"
            >
            <ImageView
                android:id="@+id/profile_image_in_blog"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:src="@drawable/zxcursed"

                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/name_in_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitles"
            android:textColor="@color/titles"
            android:layout_toRightOf="@+id/img_holder"
            android:layout_centerVertical="true"
            android:text="ZXCURSED"
            android:layout_above="@+id/time"
            android:textSize="15dp"

            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitles"
            android:textColor="@color/titles"
            android:text="20/10/2022"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_holder"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blog_item_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_blog_holder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_item_txt"
            style="@style/TextTitles"
            android:textColor="@color/titles"
            android:layout_marginVertical="10dp"
            />

        <ImageView
            android:layout_below="@+id/blog_item_txt"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:id="@+id/blog_item_img"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/blog_item_things"
        app:layout_constraintLeft_toLeftOf="parent">
        <RelativeLayout
            android:id="@+id/blog_reactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TextTitles"
                android:textColor="@color/titles"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/raiting_up"
                android:id="@+id/raiting"
                android:layout_marginHorizontal="20dp"
                android:text="56"
                />
            <ImageView
                android:id="@+id/raiting_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:tint="@color/backgroundSecond"
                android:src="@drawable/arrow_circle_up_white"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_circle_down_white"
                android:tint="@color/backgroundSecond"
                android:layout_toEndOf="@+id/raiting"
                android:id="@+id/raiting_down"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blog_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/blog_reactions"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TextTitles"
                android:textColor="@color/titles"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/comm_img"
                android:id="@+id/comm"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:text="10 reactions"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/comments_img"
                android:tint="@color/backgroundSecond"
                android:id="@+id/comm_img"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>