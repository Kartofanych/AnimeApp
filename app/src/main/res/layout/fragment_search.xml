<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment"
    android:background="@color/backgroundSecond"
    android:paddingBottom="50dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZXCURSED"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:textSize="16dp"
            style="@style/TextTitles"
            android:textColor="@color/titles"
            android:drawableEnd="@drawable/arrow_small_right"
            android:drawableTint="@color/background_another"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/search_white_img"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ongoing_anim_list_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintWidth_percent="1"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@+id/anim_titles"
            android:backgroundTint="@color/backgroundSecond"
            app:layout_constraintRight_toRightOf="parent"
            app:cardBackgroundColor="@color/backgroundSecond"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:stateListAnimator="@null"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorEnabled="false"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popular_list_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ongoing_anim_list_holder"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="1">
        <RelativeLayout
            android:id="@+id/popular_anim_titles"
            android:layout_width="0dp"
            android:paddingHorizontal="20dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableTint="@color/background_another"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by:"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                style="@style/TextTitles"
                android:textColor="@color/titles"
                />

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:id="@+id/sortByHolder"
                android:layout_alignParentEnd="true">
                <Spinner
                    android:id="@+id/nice_spinner"
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:dropDownVerticalOffset="40dp"
                    android:dropDownWidth="match_parent"
                    android:background="@drawable/bg_spinner"
                    />
                <ImageView
                    android:id="@+id/sortByImg"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_down_img"
                    android:tint="@color/background_another"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/popular_list_holder">
                <LinearLayout
                    android:id="@+id/grid_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>