<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/stat_title_pressing"
    android:clickable="true"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_of_preview"
        android:layout_width="145dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/img_anime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/grid_ex_2"
            />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginVertical="12dp"
        android:layout_height="match_parent"
        android:id="@+id/relll"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toRightOf="@+id/card_of_preview"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demon Slayer"
            style="@style/TextTitles"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="@color/titles"
            />
        <TextView
            android:id="@+id/about_anime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name"
            android:text="This anime tells us about cute girl Nezuko, which is really really beautiful..."
            style="@style/TextTitles"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="@color/titles"
            />
        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="139000 views"
            style="@style/TextTitles"
            android:textSize="13dp"
            android:textColor="@color/harder_grey"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/point_between"
            android:layout_toRightOf="@+id/views"
            android:id="@+id/ppp"
            android:tint="@color/harder_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            />
        <TextView
            android:id="@+id/series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ppp"
            android:layout_alignParentBottom="true"
            android:text="12 series"

            style="@style/TextTitles"
            android:textSize="13dp"
            android:textColor="@color/harder_grey"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>