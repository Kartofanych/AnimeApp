<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/iv_gif_container"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="50dp" />


    <RelativeLayout
        android:id="@+id/fl_shadow_container"
        android:layout_width="match_parent"
        android:background="@drawable/slider_title_back"
        android:layout_height="100dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/status"
            android:layout_width="60dp"
            android:layout_height="17dp"
            android:background="@drawable/stat_buttons_anim"
            android:text="Ongoing"
            android:layout_marginStart="6dp"
            style="@style/TextTitles"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_above="@+id/title_name"
            />
        <TextView
            android:id="@+id/year"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_toEndOf="@+id/status"
            android:background="@drawable/stat_buttons_anim"
            android:text="2022 y."
            android:layout_marginStart="6dp"
            style="@style/TextTitles"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_above="@+id/title_name"
            />
        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/titles"
            android:paddingHorizontal="6dp"
            android:lines="1"
            android:layout_above="@+id/title_description"
            style="@style/TextTitles"
            android:textSize="16sp" />
        <TextView

            android:id="@+id/title_description"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="5dp"
            android:lines="1"
            style="@style/TextTitles"
            android:textColor="@color/titles"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>